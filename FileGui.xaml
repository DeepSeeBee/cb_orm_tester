<UserControl x:Class="CbOrmTester.FileGui"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CbOrmTester"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <Button DockPanel.Dock="Bottom" Content="Edit" Click="OnShowButtonClock">
            </Button>
            <TextBox 
                                            Text="{Binding Content,Mode=OneWay}"
                                            Grid.Column="0" 
                                                 TextWrapping="NoWrap" 
                                               IsReadOnly="True" HorizontalScrollBarVisibility="Visible" 
                                                VerticalScrollBarVisibility="Visible"                                                  
                                                 ToolTip="TestCase"
                                                 />
        </DockPanel>
    </Grid>
</UserControl>
